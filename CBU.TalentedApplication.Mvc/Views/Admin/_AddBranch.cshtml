@{
    ViewBag.Title = "Add Branch";
}

<h2 style="color: aliceblue;margin-bottom:">Add Branch</h2>
<!-- Form for adding branch -->
<form method="post" id="branchForm" action="@Url.Action("AddBranch", "Admin")">
    <div class="form-group">
        <label for="branchName" style="color: aliceblue">Branch Name</label>
        <input type="text" name="Name" placeholder="Branch Name" required>
    </div>
    <button type="submit" style="width: auto; padding: 10px; margin-top: 10px;
    background-color: darkblue ; border: none; border-radius: 5px; font-size: 16px;
    color: aliceblue; cursor: pointer;">
        Branch Ekle
    </button>
</form>