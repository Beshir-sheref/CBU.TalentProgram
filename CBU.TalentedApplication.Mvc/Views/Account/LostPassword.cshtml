@{
    ViewData["Title"] = "Lost Password";
}



<!-- Display error message if any -->
@Html.Partial("_Alerts")

<h2 style="color:aliceblue">Şifre değiştirme ekranı</h2>

<form style="color:aliceblue"  asp-action="LostPassword" method="post">
    <div class="form-group">
        <label style="color:aliceblue" for="email">Email</label>
        <input type="email" class="form-control" id="email" name="email" required />
    </div>

    <div class="form-group">
        <label style="color:aliceblue" for="password">Yeni şifre</label>
        <input type="password" class="form-control" id="password" name="password" required />
    </div>

    <div class="form-group">
        <label style="color:aliceblue" for="repeated">şifre tekrerla</label>
        <input type="password" class="form-control" id="repeated" name="repeated" required />
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>
